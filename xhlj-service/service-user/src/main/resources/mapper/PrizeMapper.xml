<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.swyxl.user.mapper.PrizeMapper">

    <sql id="columns">
        id, name, image, level, description, is_deleted, create_time, update_time
    </sql>

    <select id="selectAll" resultType="com.swyxl.model.entity.user.Prize">
        select <include refid="columns"/> from prize where is_deleted = 0
    </select>

    <select id="selectById" resultType="com.swyxl.model.entity.user.Prize">
        select <include refid="columns"/> from prize where id = #{id} and is_deleted = 0
    </select>
</mapper>